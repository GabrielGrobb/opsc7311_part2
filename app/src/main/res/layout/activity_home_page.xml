<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:background="@drawable/homepagetitlebackground"
            android:orientation="horizontal">

            <View
                android:id="@+id/divLeftOfMenuIcon"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#CAF498" />

            <ImageView
                android:id="@+id/IV_menubutton"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                tools:srcCompat="@drawable/ic_menubutton" />

            <TextView
                android:id="@+id/txt_PageTitle"
                android:layout_width="222dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/homepage_title"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/IV_NotificationBell"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foregroundTint="#020202"
                tools:srcCompat="@drawable/ic_notificationbell"
                app:tint="#131111" />

            <View
                android:id="@+id/divRioghtOfBellIcon"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#CAF498" />

        </LinearLayout>

        <View
            android:id="@+id/divCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/default_background" />

        <TextView
            android:id="@+id/txtCategoriesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/homepage_categorytitle"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <View
            android:id="@+id/divBellowCategories"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="@color/default_background" />

        <ImageView
            android:id="@+id/ivGreyBar"
            android:layout_width="378dp"
            android:layout_height="11dp"
            app:srcCompat="@drawable/homepagecategorytitleborder" />

        <View
            android:id="@+id/divBellowGrey"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/default_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivActivityIcon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ivActivityIcon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ivActivityIcon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <View
            android:id="@+id/div_BetweenIcons"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@color/default_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivActivityIcon4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ivActivityIcon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ivActivityIcon6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <View
            android:id="@+id/divBellowIcons"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:background="@color/default_background" />

        <ImageView
            android:id="@+id/ivAddActivity"
            android:layout_width="219dp"
            android:layout_height="82dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_add"
            app:tint="#03A9F4" />

        <View
            android:id="@+id/divBellowAddActivity"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/default_background" />

    </LinearLayout>
</RelativeLayout>